<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="txtr.apps.armorg.com.txtr.CardCreatorActivity"
    android:weightSum="1">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:id="@+id/contacts_rv"
        android:background="@drawable/selector"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:id="@+id/phrases_rv"
        android:layout_marginTop="32dp"
        android:layout_weight="0.47"
        andorid:background="@drawable/selector"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Card"
        android:layout_gravity="bottom"
        android:id="@+id/create_btn"
        android:background="@color/colorPrimary"
        android:textColor="@color/white" />

</LinearLayout>
